<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>NFL Pick-Em 2021 {{ app.request.pathinfo == '/' ? '' : ':' }} {% block title %}{% endblock %}</title>
		<link rel="stylesheet" type="text/css" href="{{ asset( 'css/styles.css' ) }}" media="screen" />
		{% block stylesheets %}
		{% endblock %}
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" type="text/javascript"></script>
		<script src="{{ asset( 'js/jqueryui.js' ) }}" type="text/javascript"></script>
		<script src="{{ asset( 'js/javascript.js' ) }}" type="text/javascript"></script>
		{% block javascripts %}
		{% endblock %}
	</head>
	<body>
		<div class="container">
			<div class="header">
				<div class="title">
					<h1><a href="{{ path( 'app_homepage' ) }}" title="NFL Pick-Em 2021">NFL Pick-Em 2021</a></h1>
				</div>
			</div>
			<div class="navigation">
				<span>
					{% include '_banner.html.twig' %}
				</span>
			</div>
			<div class="main">
				<div class="content">
					{% block flashes %}
						{% for label, messages in app.flashes %}
							{% for message in messages %}
								<div class="flash-{{ label }}">{{ message }}</div>
							{% endfor %}
						{% endfor %}
					{% endblock %}

					{% block formErrors %}
						{% if formErrors is defined and formErrors|length %}
							<div class="error">
								<span class="error_text_top">The Following {{ formErrors|length == 1 ? 'Error Has' : formErrors|length ~ ' Errors Have' }} Occurred!</span><br />
								<span class="error_text">
									{% for formError in formErrors %}
										- {{ formError.message }}<br />
									{% endfor %}
								</span>
							</div>
						{% endif %}
					{% endblock %}

					{% block content %}{% endblock %}
				</div>
				<div class="sidenav">
					{% include '_navigation.html.twig' %}
					<h1>Poll</h1>
					<div id="loading_polls_nav"></div>
				</div>
				<br clear="all" />
			</div>
			<div class="footer">
				&copy; 2007-{{ "now"|date( 'Y' ) }} <a href="{{ path( 'app_homepage' ) }}">NFLPick-Em.com</a>.
			</div>
		</div>
	</body>
</html>
